{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
  <div class="login">
    <div class="wrapper" style="min-height:100vh">
      <section class="sidebar sidebar--login"></section>
      <section class="main">
        <main></main>
      </section>

      <div class="popup">
        <div class="popup__content popup__content--login">
          <h2 class="popup__headline">Connecte toi !!!!!</h2>
          <p class="popup__text">
            Connecte toi pour profiter de toutes les fonctionalit√©s du site.
            <span class="popup__text popup__text--error"></span>
          </p>
          <form action="{{ path('security_login') }}" autocomplete="off" class="form form--login" method="post">
            <div class="form__line">
              <label for="username">Entre ton pseudo :
              </label>
              <input id="username" name="username" required type="text">
            </div>
            <div class="form__line">
              <label for="username">Entre ton adresse email :
              </label>
              <input id="email" name="email" required type="email">
            </div>
            <div class="form__line">
              <label for="password">Entre ton mot de passe :
              </label>
              <input id="password" name="password" required type="password">
            </div>
            <div class="form__button">
              <input type="submit" value="Se connecter">
            </div>
          </form>
          <a class="textLink" href="/inscription">Pas encore de compte?</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
