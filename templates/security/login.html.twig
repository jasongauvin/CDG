{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<h1>Connexion</h1>
    <form action="{{ path(security_login) }}" method="post">
        <div class="form-group">
            <input type="text" placeholder="Adresse mail" required name="_username" class="form-control">
        </div>

        <div class="form-group">
            <input type="text" placeholder="Mot de passe" required name="_password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
        </div>
    </form>
{% endblock %}
